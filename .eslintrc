{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true,
    "babelOptions": {
      "configFile": "./.babelrc"
    }
  },
  "env": { "es6": true },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }]
  }
}
